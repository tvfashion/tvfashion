<%= form_for(@outfit) do |f| %>
  <% if @outfit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outfit.errors.count, "error") %> prohibited this outfit from being saved:</h2>

      <ul>
      <% @outfit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :show %><br>
    <%= f.select :show, Show.all.collect{|show| [show.name, show.id]},include_blank: 'Select Show' %>
  </div>
  <div class="field hide" id='episodes_div'>
    <%= f.label :episode_id %><br>
    <%= f.select :episode_id, [] %>
  </div>
  <div class="field hide" id='actors_div'>
    <%= f.label :actor_id %><br>
    <%= f.select :actor_id, [] %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <%= f.file_field(:image) %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= javascript_include_tag 'outfit'%>