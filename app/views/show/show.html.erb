<p id="notice"><%= notice %></p>
<!-- Top Fan Art -->
<div class="row">
  <div class="large-12 columns">
    <!-- Desktop Slider -->

    <div class="hide-for-small">
        <div id="featured">
            <div class="fanart">
                <% fanart = @show.banner.where("banner_type = 'fanart'").first %>
                <%= image_tag(fanart.image) %>
                <div class="fanart-overlay">
                    <% poster = @show.banner.where("banner_type = 'poster'").first %>
                    <%= image_tag(poster.image) %>
                    <div class="fanart-description">
                        <div class="fanart-content">
                            <h1><%= @show.name %></h1>
                            <p><%= @show.overview %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End Desktop Slider -->
    <!-- Mobile Header -->

    <div class="row">
      <div class="small-12 show-for-small"><br>
      <img src="http://placehold.it/1000x600&amp;text=For%20Small%20Screens"></div>
    </div><!-- End Mobile Header -->
  </div>
</div><br>
<!-- END Top Fan Art -->

<!-- Seasons -->
<div class="row">
  <div class="large-12 columns">
      <h1>Seasons</h1>
    <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-5">
<!-- Use season count to make a loop to pull each season cover  -->
        <%  $i = 0
            while $i < @show.seasons_count do %>
        
        <% $i +=1   %> 
        <% cover = @show.banner.where("season = ?", $i.to_s).take(1) %> 
        <% if cover.first != nil %>
        <li>
        <%= link_to( image_tag(cover.first.image_path), season_path(@show.id, $i)) %>
        </li>
        <% end %>
        <% end %>
    </ul>
  </div>
</div><br>
<!-- END Seasons -->

<!-- Top Actors -->
<div class="row">
  <div class="large-12 columns">
      <h1>Top Actors</h1>
    <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
        <% sorted = @show.actors.sort! { |a,b| a.sort_order <=> b.sort_order } %> <!-- sort actors by sort order -->
        <% sorted.each do |act| %>
        <% if act.image != nil %> <!-- Checks to see if they have image -->
        <li> 
       <%= link_to( image_tag(act.image), show_actor_path(@show.id, act)) %> <!-- Display actor image and link to their page -->
        </li>
        <% end %>
        <% end %>
<!--        for each actor matching series_id with thumb ( show thumb and link to corresponding actor)       -->
        
    </ul>
  </div>
</div><br>
<!-- END Top Actors -->

<!-- Top Fashion -->
<div class="row">
  <div class="large-12 columns">
      <h1>Top Fashion</h1>
    <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
<!--        for each fashion matching series_id ( show thumb and link to corresponding fashion       -->
    </ul>
  </div>
</div><br>
<!-- END Top Fashion -->
